@page "/server-status"
@inject IApiClient _apiClient;

@if (ServerStatus == null)
{
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Loading...</MudText>
    return;
}

<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Server status</MudText>
<MudText Align="Align.Left">Registred users: @ServerStatus.UserCount</MudText>

@code{

    protected override async Task OnInitializedAsync()
    {
        ServerStatus = await _apiClient.GetServerStatusAsync();
    }

    private GetServerStatusResult ServerStatus { get; set; }

}