<label>Recieved messages: @Messages.Count</label>
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th scope="col">Time</th>
        <th scope="col">Consumer</th>
        <th scope="col">Message</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var (dateTime, consumer, message) in Messages)
    {
        <tr>
            <td>@dateTime.ToString("hh:mm:ss")</td>
            <td>@consumer</td>
            <td style="white-space: pre-line">@message</td>
        </tr>
    }
    </tbody>
</table>

@code
{
    [Parameter]
    public List<(DateTime, string, string)> Messages { get; set; }
}